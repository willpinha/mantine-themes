---
import Layout from "@/layouts/Layout.astro";
import type { Scheme } from "@/lib/themes";
import themes from "@/themes";
import { SchemeThemePage } from "./SchemeTheme";

export function getStaticPaths() {
	const paths = [];

	const schemes = ["dark", "light"];

	for (const theme of themes) {
		for (const scheme of schemes) {
			paths.push({
				params: { scheme, theme: theme.slug },
				props: { theme },
			});
		}
	}

	return paths;
}

const { scheme } = Astro.params;
const { theme } = Astro.props;
---

<Layout title={theme.label}>
	<SchemeThemePage scheme={scheme as Scheme} theme={theme} client:load />
</Layout>
